{{#news}}
<div data-id={{_id}} class="new-wrapper">
    <h3>{{user}}:</h3>
    <h4 class="new-text" >{{text}}</h4> <button class="like">Like it!</button>
    <p>
        {{date}}
        <strong>
            {{#if likes}}Likes:{{likes}}{{else}}Likes: 0{{/if}}
        </strong>
    </p> 
    <p>Comments:<p>
    <ul>
        {{#comments}}
        <li>{{comment}}</li>
        {{/comments}}
    </ul>
    <form class="form-inline">
        <div class="form-group col-md-12">
            <input placeholder="Something to say" type="text" class="form-control tb-comment">
            <button class="form-control btn-add-comment">Add</button>  
        </div>
    </form>
</div>
{{/news}}