{{#news}}
<div class="new-wrapper" data-id={{_id}} >
    <h3>{{user}}:</h3>
    <h4 class="new-text" >{{text}}</h4>
    <div class="row">
        <p class="col-md-9">
            {{date}}
            <strong>
                {{#if likes}}Likes:{{likes}}{{else}}Likes: 0{{/if}}
            </strong>
        </p> 
         <button class="btn btn-info btn-xs">Like it!</button>
    </div>
    <p>Comments:<p>
    <ul>
        {{#comments}}
        <li>{{comment}}</li>
        {{/comments}}
    </ul>
    <form class="form-inline">
        <div class="form-group col-md-12">
            <input placeholder="Something to say" type="text" class="form-control tb-comment">
            <button class="form-control btn btn-success btn-add-comment">Add</button>  
        </div>
    </form>
</div>
{{/news}}